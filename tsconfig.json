{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "rootDir": "./packages",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "incremental": true,
    "allowJs": true,
    "baseUrl": "./",
    "paths": {
      "task11-domain": ["packages/domain/src/index.ts"],
      "task11-application": ["packages/application/src/index.ts"],
      "task11-shared": ["packages/shared/src/index.ts"]
    }
  },
  "include": [
    "packages/**/*"
  ],
  "references": [
    { "path": "./packages/domain" },
    { "path": "./packages/application" },
    { "path": "./packages/infrastructure" },
    { "path": "./packages/shared" },
    { "path": "./packages/electron-app" }
  ],
  "exclude": [
    "coverage/**",
    "tools/**",
    "scripts/**",
    "demo/**",
    "docs/**",
    "jest.config.js",
    "**/dist/**",
    "**/node_modules/**",
    "packages/ui-web/**"
  ]
}
